<?xml version="1.0" encoding="ISO-8859-1" ?>
<scenario name="Basic UAS">
  <!-- Esperar INVITE entrante -->
  <recv request="INVITE">
    <action>
      <!-- Guardar info del mensaje para usar en respuestas -->
      <ereg regexp=".*" search_in="hdr" header="From" assign_to="from_hdr" />
      <ereg regexp=".*" search_in="hdr" header="To" assign_to="to_hdr" />
      <ereg regexp=".*" search_in="hdr" header="Call-ID" assign_to="call_id_hdr" />
    </action>
  </recv>

  <!-- Enviar 100 Trying -->
  <send>
    <![CDATA[
      SIP/2.0 100 Trying
      [last_Via:]
      [last_From:]
      [last_To:]
      [last_Call-ID:]
      [last_CSeq:]
      Content-Length: 0
    ]]>
  </send>

  <!-- Enviar 180 Ringing -->
  <send>
    <![CDATA[
      SIP/2.0 180 Ringing
      [last_Via:]
      [last_From:]
      [last_To:];tag=[pid]SIPpTag[call_number]
      [last_Call-ID:]
      [last_CSeq:]
      Contact: <sip:[local_ip]:[local_port];transport=[transport]>
      Content-Length: 0
    ]]>
  </send>

  <!-- Enviar 200 OK -->
  <send>
    <![CDATA[
      SIP/2.0 200 OK
      [last_Via:]
      [last_From:]
      [last_To:];tag=[pid]SIPpTag[call_number]
      [last_Call-ID:]
      [last_CSeq:]
      Contact: <sip:[local_ip]:[local_port];transport=[transport]>
      Content-Type: application/sdp
      Content-Length: [len]

      v=0
      o=user1 53655765 2353687637 IN IP[local_ip_type] [local_ip]
      s=-
      c=IN IP[media_ip_type] [media_ip]
      t=0 0
      m=audio [media_port] RTP/AVP 0
      a=rtpmap:0 PCMU/8000
    ]]>
  </send>

  <!-- Esperar ACK -->
  <recv request="ACK"></recv>

  <!-- Esperar BYE -->
  <recv request="BYE"></recv>

  <!-- Enviar 200 OK al BYE -->
  <send>
    <![CDATA[
      SIP/2.0 200 OK
      [last_Via:]
      [last_From:]
      [last_To:]
      [last_Call-ID:]
      [last_CSeq:]
      Content-Length: 0
    ]]>
  </send>
</scenario>
